@model InsurancePartner.Web.Models.PolicyViewModels.CreatePolicyViewModel

@{
    ViewData["Title"] = "Create Policy";
}

<!DOCTYPE html>

<html lang="en-US">
<head>
    <title>Create Policy</title>
</head>
<body>
<div class="container">
    <h2>Create New Policy</h2>

    <form asp-action="PolicyCreate" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PolicyNumber">Policy Number</label>
                    <input asp-for="PolicyNumber" class="form-control"/>
                    <span asp-validation-for="PolicyNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Amount">Amount</label>
                    <input asp-for="Amount" class="form-control"/>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="PolicyIndex" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
</body>
</html>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
    <script>
        $(document).ready(function (){
            $("form").validate();
        });
    </script>
}
