@model InsurancePartner.Web.Models.PolicyViewModels.DeletePolicyViewModel

@{
    ViewData["Title"] = "Delete Policy";
}

<!DOCTYPE html>

<html lang="en-US">
<head>
    <title>Delete Policy</title>
</head>
<body>
<div class="container">

    @if (TempData["ErrorMessage"] != null)
    {
    <div class="alert alert-danger">
        <p>@TempData["ErrorMessage"]</p>
    </div>
    }

    <h2>Delete Policy</h2>

    <div class="alert alert-warning">
        <h4>Are you sure you want to delete this policy?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Policy Number</dt>
                <dd class="col-sm-9">@Model.PolicyNumber</dd>

                <dt class="col-sm-3">Amount</dt>
                <dd class="col-sm-9">@Model.Amount</dd>

                <dt class="col-sm-3">Created Date</dt>
                <dd class="col-sm-9">@Model.CreatedAtUtc.ToString("g")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="PolicyDeleteConfirmed" asp-route-policyId="@Model.PolicyId" method="post" class="mt-4">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete Policy</button>
        <a asp-action="PolicyIndex" class="btn btn-secondary">Cancel</a>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>
</body>
</html>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
